% Functional Recursion: ;
fact IS RECUR [ 0 =, 1 first, pass, product, -1 +] % from wikipedia; 
 
% Product of a range: ; 
fact IS * count;

% Plain recursion: ;
fact IS OPERATION x {
  if x = 0 then 1 else x * fact (x - 1) endif
  };

% While loop: ;
fact IS OPERATION x {
prod := 1;
  WHILE x > 0 DO
      prod := prod * x;
      x := x - 1;
  ENDWHILE;
  prod
}
