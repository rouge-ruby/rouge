/*
Example from https://github.com/structurizr/cli/blob/master/docs/getting-started.md
*/
workspace "Getting Started" "This is a model of my software system." {

    model {
        user = person "User ${USER_NAME}" "A user of my software system."
        softwareSystem = softwareSystem "${SYSTEM_NAME}" "A Pygments-compatible code highlighter."

        user -> softwareSystem "Uses"
    }

    views {
        systemContext softwareSystem "SystemContext" "An example of a System Context diagram." {
            include *
            autoLayout
        }

        styles {
            element "Software System" {
                background #1168bd
                color #ffffff
            }
            element "Person" {
                shape person
                background #08427b
                color #ffffff
            }
        }
    }
    
}
